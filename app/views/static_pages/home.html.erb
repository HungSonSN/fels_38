<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="show_home">
      <%= button_to "Word List", words_path, class: "btn,
      btn-lg btn-primary", method: :get %>
      <%= button_to "Categories", categories_path, class: "btn,
      btn-lg btn-primary", method: :get %>
    </div><br>
    <aside>
      <div class="lessons">
        <h1>Activities</h1>
        <h2>Learned <%= current_user.lessons.count %> lessons</h2><br>
        <% render @current_user.lessons %>
      </div>
    </aside>
    <aside>
        <%= render "shared/feed" %>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome Framgia E-Learning System</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    <h2>
      Please sign up to start challenging English World
    </h2>
  </div>
<% end %>