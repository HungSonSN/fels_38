<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <aside>
      <div class="lessons">
        <h1>Activities</h1>
        <h2>Learned <%= current_user.lessons.count %> lessons</h2><br>
        <%= render current_user.lessons %>
      </div>
    </aside>
    <aside>
        <%= render "shared/feed" %>
    </aside>
  </div>
<% else %>
<% end %>
