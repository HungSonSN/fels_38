<% provide(:title, "Add new word") %>
<h1>Add new word in </h1>
<%= @category.name %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@category, @word] do |f| %>
      <%= f.label :content, "Input a word" %>
      <%= f.text_field :content %>
      <%= f.label :meaning, "Input mean of word" %>
      <%= f.text_field :meaning %>
      <span>Add answer for this word</span><br />
      <%= f.fields_for :answers do |builder| %>
        <%= builder.label :content, "Answer: " %>
        <%= builder.text_field :content %>
        <%= builder.label :correct, 'Correct Answer' %>
        <%= builder.check_box :correct %>
      <% end %>
      <%= f.submit "Add new word", class: "btn btn-primary" %>
    <% end %>
  </div>  
</div>  