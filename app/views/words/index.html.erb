<% provide(:title, 'Word list') %>
<div class="word_list">
  <%= form_tag("", method: :get) do %>
    <%= select_tag(:id, options_from_collection_for_select(Category.all.collect, "id", "name"), prompt: "All") %>
    <%= submit_tag "filter" %>
  <% end %>
</div>
<div class="show_word">
  <% if @category.nil? %>
    <h1>All words</h1>
  <% else %>
    <h1><%= @category.name %></h1>
  <% end %>  
  <table>
    <tr class="word_headings">
      <th>Word</th>
      <th>Meaning</th>
    </tr>
    <%= will_paginate %>
    <%= render @words %>  
  </table>  
</div>