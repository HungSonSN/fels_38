<% provide(:title, "Edit word") %>
<h1>Update word in </h1>
<%= @word.category.name %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @word do |f| %>
      <%= f.label :content, "Input a word" %>
      <%= f.text_field :content %>
      <%= f.label :meaning, "Input mean of word" %>
      <%= f.text_field :meaning %>
      <%= f.submit "Update word", class: "btn btn-primary" %>
    <% end %>
  </div>  
</div>  